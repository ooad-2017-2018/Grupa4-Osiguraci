@model IEnumerable<E_Dernek.Models.Dernek>
@using Microsoft.AspNet.Identity
@{
                /**/

                /**/

                ViewBag.Title = "Derneci";
}
<html>
<head>
    <style>
        #container {
            background-color: green;
            width: 100%;
            height: 100px;
        }

        .ponuda {
            background-color: red;
            width: 33%;
            height: 60px;
            border: 1px solid #000;
            float: left;
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="jumbotron" resource="">
            <h1>Odaberite trazeni dernek!</h1>
        </div>
        <p>@Html.ValidationMessage("pokazi", new { @style = "color:red" })</p>
        @foreach (var item in Model)
        {
        <div class="col-md-4">
            <img src="@Html.Action("vratiSliku", "Dernek", new { id = item.IDDerneka })" width="272" height="180" alt="Moskva" onclick="location.href='@Url.Action("InfoDernek","About", new { id = item.IDDerneka })'" class="responsive">
            <h3>@Html.Action("vratiIme", "Dernek", new { id = item.IDDerneka })</h3>

            <p>
                <head>
                    <meta name="viewport" content="width=device-width, initial-scale=1">
                    <style>
                        .block {
                            display: block
                            border: none;
                            background-color: #4CAF50;;
                            width: 100%;
                            color: white;
                            padding: 14px 28px;
                            font-size: 16px;
                            cursor: pointer;
                            text-align: center;
                        }

                            .block:hover {
                                background-color: #ddd;
                                color: black;
                            }
                    </style>
                </head>
                <body>
                    @using Microsoft.AspNet.Identity
                    @if (Request.IsAuthenticated)
                    {
                        <button class="block" onclick="location.href='@Url.Action("InfoDernek", "About")'">Rezerviši</button>
                    }

                </body>
            </p>
            <br> <br />
        </div>
    }
        </div>
</body>

</html>